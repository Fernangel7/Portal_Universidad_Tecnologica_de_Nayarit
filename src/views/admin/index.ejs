            const mobileMenuClose = document.getElementById('mobile-menu-close');
            const mobileSheet = document.getElementById('mobile-sheet');
            const mobileSheetOverlay = document.getElementById('mobile-sheet-overlay');

            // User dropdown
            if (userMenuButton && userMenu) {
                userMenuButton.addEventListener('click', function (event) {
                    event.stopPropagation();
                    userMenu.classList.toggle('hidden');
                });

                document.addEventListener('click', function (event) {
                    if (!userMenu.contains(event.target) && !userMenuButton.contains(event.target)) {
                        userMenu.classList.add('hidden');
                    }
                });
            }

            // Mobile sheet
            function openSheet() {
                if (mobileSheet) mobileSheet.classList.add('sheet-open');
            }
            function closeSheet() {
                if (mobileSheet) mobileSheet.classList.remove('sheet-open');
            }

            if (mobileMenuTrigger) mobileMenuTrigger.addEventListener('click', openSheet);
            if (mobileMenuClose) mobileMenuClose.addEventListener('click', closeSheet);
            if (mobileSheetOverlay) mobileSheetOverlay.addEventListener('click', closeSheet);

            // Chart tooltip functionality
            const chartContainer = document.querySelector('.mt-4');
            const chartImage = document.querySelector('.chart-image');
            const tooltip = document.getElementById('chart-tooltip');
            const desktopCount = document.getElementById('desktop-count');
            const mobileCount = document.getElementById('mobile-count');
            const totalCount = document.getElementById('total-count');
            const currentMonth = document.getElementById('current-month');
            
            // Evitar que el tooltip interfiera con los eventos del mouse
            if (tooltip) {
                tooltip.style.pointerEvents = 'none';
            }
            
            if (chartContainer && chartImage) {
                // Datos por mes
                const months = ['Enero', 'Feb', 'Mar', 'Abr', 'May', 'Jun'];
                const desktopData = [186, 305, 237, 73, 209, 214];
                const mobileData = [80, 200, 120, 190, 130, 140];
                
                let isMouseInChart = false;
                
                // Manejar el movimiento del mouse sobre el contenedor
                chartContainer.addEventListener('mousemove', (e) => {
                    isMouseInChart = true;
                    const rect = chartImage.getBoundingClientRect();
                    const x = e.clientX - rect.left;
                    const y = e.clientY - rect.top;
                    
                    // Calcular el índice del mes basado en la posición del mouse
                    const monthIndex = Math.floor(x / (rect.width / months.length));
                    
                    if (monthIndex >= 0 && monthIndex < months.length) {
                        // Actualizar el mes y las estadísticas
                        currentMonth.textContent = months[monthIndex];
                        desktopCount.textContent = desktopData[monthIndex];
                        mobileCount.textContent = mobileData[monthIndex];
                        totalCount.textContent = desktopData[monthIndex] + mobileData[monthIndex];
                        
                        // Actualizar la posición del tooltip
                        const tooltip = document.getElementById('chart-tooltip');
                        if (tooltip) {
                            // Usar requestAnimationFrame para actualización más suave
                            requestAnimationFrame(() => {
                                // Calcular la posición del cursor relativa al contenedor
                                const cursorX = x;
                                
                                // Obtener el ancho del tooltip
                                const tooltipWidth = tooltip.offsetWidth;
                                
                                // Calcular la posición horizontal con límites
                                const minXMargin = 52; // Margen mínimo desde los bordes
                                const maxX = rect.width - tooltipWidth - minXMargin; // Posición máxima permitida
                                
                                // Calcular posición inicial
                                let leftPosition = Math.min(
                                    Math.max(minXMargin, cursorX), // No menor que el margen mínimo
                                    maxX // No mayor que la posición máxima
                                );
                                
                                // Ajustar si el tooltip queda cortado
                                if (leftPosition + tooltipWidth > rect.width - minXMargin) {
                                    leftPosition = rect.width - tooltipWidth - minXMargin;
                                }
                                
                                // Aplicar la posición horizontal con transformación hardware-accelerated
                                tooltip.style.transform = `translateX(${leftPosition}px)`;
                            });
                            
                                // Ajustar la posición vertical manteniéndola dentro de los límites
                            const tooltipHeight = tooltip.offsetHeight;
                            const monthsLabelHeight = 40; // altura aproximada para los nombres de los meses
                            const yPosition = Math.min(
                                Math.max(40, y), // No permitir que suba más arriba de 0
                                rect.height - tooltipHeight - monthsLabelHeight // límite para no tapar los meses
                            );
                            tooltip.style.top = `${yPosition}px`;
                        }
                    }
                });
            }
        });
    </script>
