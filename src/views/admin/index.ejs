        :root {
            --background: 165 60% 97%;
            --foreground: 171 80% 10%;
            --card: 165 60% 97%;
            --card-foreground: 171 80% 10%;
            --popover: 165 60% 97%;
            --popover-foreground: 171 80% 10%;
            --primary: 171 95% 27%;
            --primary-foreground: 171 25% 95%;
            --secondary: 169 53% 90%;
            --secondary-foreground: 171 95% 27%;
            --muted: 169 53% 94%;
            --muted-foreground: 171 40% 30%;
            --accent: 169 53% 41%;
            --accent-foreground: 171 25% 98%;
            --destructive: 0 84.2% 60.2%;
            --destructive-foreground: 0 0% 98%;
            --border: 171 20% 88%;
            --input: 171 20% 88%;
            --ring: 171 95% 27%;
            --radius: 0.5rem;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: hsl(var(--muted) / 0.4);
        }
        .font-headline {
            font-family: 'PT Sans', sans-serif;
        }
        .bg-background { background-color: hsl(var(--background)); }
        .bg-primary { background-color: hsl(var(--primary)); }
        .text-primary-foreground { color: hsl(var(--primary-foreground)); }
        .bg-muted\/40 { background-color: hsl(var(--muted), 0.4); }
        .border-b { border-bottom-width: 1px; }
        .border-border { border-color: hsl(var(--border)); }
        .text-muted-foreground { color: hsl(var(--muted-foreground)); }
        .text-foreground { color: hsl(var(--foreground)); }
        .bg-card { background-color: hsl(var(--card)); }
        .text-card-foreground { color: hsl(var(--card-foreground)); }
        .shadow-sm { box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05); }
        .rounded-lg { border-radius: var(--radius); }
        .border { border-width: 1px; }
        .badge-secondary {
            border-color: transparent;
            background-color: hsl(var(--secondary));
            color: hsl(var(--secondary-foreground));
        }
         .badge-outline {
            color: hsl(var(--foreground));
             border-color: hsl(var(--border));
        }
        /* Mobile sheet styles */
        .sheet-content {
            transform: translateX(-100%);
            transition: transform 0.3s ease-in-out;
        }
        .sheet-open .sheet-content {
            transform: translateX(0);
        }
        .sheet-overlay {
            opacity: 0;
            transition: opacity 0.3s ease-in-out;
            pointer-events: none;
        }
        .sheet-open .sheet-overlay {
            opacity: 1;
            pointer-events: auto;
        }
    </style>
</head>
